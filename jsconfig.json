{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
        "static/*": [
          "public/static/*"
        ],
        "common/*": [
          "src/common/*"
        ],
        "containers/*": [
          "src/containers/*"
        ],
        "components/*": [
          "src/components/*"
        ],
        "connectors/*": [
          "src/connectors/*"
        ],
        "layouts/*": [
          "src/containers/_layouts/*"
        ],
        "pages/*": [
          "src/pages/*"
        ],
        "actions$/*": [
          "src/actions.js"
        ],
        "store$/*": [
          "src/store.js"
        ],
    }
  },
  "exclude": ["node_modules/"],
  "include": [
    "src/**/*",
    "public/**/*"
  ]
}
